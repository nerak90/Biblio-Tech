    private int leerOpcion() {
        try {
            return Integer.parseInt(scanner.nextLine().trim());
        } catch (NumberFormatException e) {
            return -1;
        }
    }
    
    private void buscarLibrosPorTitulo() {
        System.out.println("\nğŸ” BÃšSQUEDA POR TÃTULO");
        System.out.println("â”€".repeat(50));
        System.out.print("Ingrese el tÃ­tulo del libro: ");
        String titulo = scanner.nextLine().trim();
        
        if (titulo.isEmpty()) {
            System.out.println("âŒ Debe ingresar un tÃ­tulo vÃ¡lido.");
            return;
        }
        
        System.out.println("\nâ³ Buscando libros...");
        List<Libro> libros = apiService.buscarLibrosPorTitulo(titulo);
 
